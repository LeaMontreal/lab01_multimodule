<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskquestionActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_user_msg"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:ems="10"
            android:hint="@string/hint_et_user_msg"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_no_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have no question" />

        <Button
            android:id="@+id/btn_send_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit my question" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>