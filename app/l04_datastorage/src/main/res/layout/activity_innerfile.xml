<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_inner_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_btn_Save"
            android:onClick="innerfileSave"/>

        <Button
            android:id="@+id/btn_inner_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_btn_read"
            android:onClick="innerfileRead"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/image_inner"
        android:layout_width="298dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="@drawable/ic_launcher_background"
        android:src="@drawable/mypicture" />

</LinearLayout>