<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestDialogActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_alert_dialog_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show normal Alert Dialog"
            android:onClick="showAlertDialogNormal"/>

        <Button
            android:id="@+id/btn_alert_dialog_single_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Alert Dialog with single choice"
            android:onClick="showAlertDialogSingleOption"/>

        <Button
            android:id="@+id/btn_alert_dialog_define"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示自定义Alert Dialog"
            android:onClick="showAlertDialogDefine"/>

        <Button
            android:id="@+id/btn_Progress_dialog_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示圆形进度Progress Dialog"
            android:layout_marginTop="20dp"
            android:onClick="showProgressDialogCircle"/>

        <Button
            android:id="@+id/btn_Progress_dialog_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示水平进度Progress Dialog"
            android:onClick="showProgressDialogHorizontal"/>

        <Button
            android:id="@+id/btn_date_picker_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示日期选择Dialog"
            android:layout_marginTop="20dp"
            android:onClick="showDatePickerDialog"/>

        <Button
            android:id="@+id/btn_time_picker_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show TimePickerDialog"
            android:onClick="showTimePickerDialog"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>